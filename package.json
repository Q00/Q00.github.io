{
  "name": "q00-blog",
  "version": "1.0.0",
  "private": true,
  "description": "A modern blog built with React and TanStack Router",
  "scripts": {
    "dev": "pnpm --filter blog dev",
    "build": "pnpm build:packages && pnpm build:blog",
    "build:packages": "pnpm --filter @q00-blog/shared build && pnpm --filter @q00-blog/ui build",
    "build:blog": "pnpm --filter blog build",
    "test": "echo 'No tests specified yet'",
    "test:watch": "echo 'No tests specified yet'",
    "lint": "pnpm --filter blog lint",
    "lint:fix": "pnpm --filter blog lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "pnpm --filter blog type-check && pnpm --filter @q00-blog/shared type-check && pnpm --filter @q00-blog/ui type-check",
    "clean": "pnpm --recursive clean"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1"
}